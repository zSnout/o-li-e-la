{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "paths": {
      "@": ["src/index.tsx"],
      "@l": ["src/Layout.astro"],
      "@/*": ["src/slides/*"]
    },
    "baseUrl": ".",
    "strict": true,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true
  }
}
